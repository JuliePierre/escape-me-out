<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo.png" %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <a class="navbar-wagon-link dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown" href="/games" aria-expanded="false"><i class="fa fa-trophy" aria-hidden="true"></i>Games
        <i class="fa fa-caret-down" aria-hidden="true"></i></a>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="/">Home</a></li>
          <li><a href="/games">All games</a></li>
        </ul>
      </div>
    </div>

    <!-- Search form -->
    <%= form_tag(games_path, :method => "get", class: "navbar-wagon-search", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search by name or city", class: "form-control border-radius" %>
     <button type="submit" class="btn btn-danger"><i class="fa fa-search"></i></button>
        <% end %>

      <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <img src="http://placehold.it/50x50" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Log Out</a></li>
        </ul>
      </div>
    </div>

  </div>

