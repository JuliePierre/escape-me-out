
<div>
  <h1><%= @game.name %></h1>
  <% if @game.photo? %>
    <%= cl_image_tag @game.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <p><%= @game.description %></p>
      <p><%= @game.address %></p>
      <p>Tel : <%= @game.phone_number %></p>
      <p>Min players : <%= @game.min_players %> </p>
      <p>Max players : <%= @game.max_players %> </p>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="index-form-container">
      <h2>Book</h2>
      <p>
        <%= form_tag(new_game_booking_path(@game), :method => "get") do %>
          <div class="form-group">
            <%= text_field_tag :nb_players, params[:nb_players], placeholder: "Number of players", class: "form-control border-radius" %>
          </div>
          <div class="form-group">
            <%= label_tag "time_select", "Available sessions" %>
            <%= select_tag "time_select", options_for_select(@availabilities), class: "form-control border-radius" %>
          </div>
          <div class="form-group">
            <%= label_tag "duration", "Duration (hours)" %>
            <%= select_tag "duration", options_for_select(["1"]), class: "form-control border-radius" %>
          </div>
          <% params[:date] = "2016-11-21" %>
          <input type="hidden" name="date" value="<%= params[:date] %>">
          <button type="submit" class="btn btn-danger">Book</button>
        <% end %>
      </p>
    </div>
  </div>
</div>



