
<div>
  <h1><%= @game.name %></h1>
  <% if @game.photo? %>
    <%= cl_image_tag @game.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <p><%= @game.description %></p>
      <p><%= @game.address %></p>
      <p>Tel : <%= @game.phone_number %></p>
      <p>Min players : <%= @game.min_players %> </p>
      <p>Max players : <%= @game.max_players %> </p>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="index-form-container">
        <h2>Book</h2>
        <p>


          <% params[:date] = "2016-11-21" %>
          <% params[:nb_players] = 3 %>


          <%= form_tag(new_game_booking_path(@game), :method => "get") do %>
            <div class="form-group">
              <%= label_tag "date", "Booking date" %>
              <%= date_field_tag :date, params[:date], value: params[:date], placeholder: "Choose a date", class: "form-control border-radius" %>
            </div>
            <div class="form-group">
              <%= label_tag "nb_players", "Number of players" %>
              <% my_options_for_select_nb_players = (@game.min_players..@game.max_players).to_a.map { |x| [x.to_s + " players", x] } %>
              <%= select_tag "nb_players", options_for_select(my_options_for_select_nb_players, params[:nb_players]), class: "form-control border-radius" %>
            </div>
            <div class="form-group">
              <%= label_tag "time_select", "Available sessions" %>
              <%= select_tag "time_select", options_for_select(@availabilities), class: "form-control border-radius" %>
            </div>
            <div class="form-group">
              <%= label_tag "duration" %>
              <% my_options_for_select_duration = (1..3).to_a.map { |x| [x.to_s + " hour(s)", x] } %>
              <%= select_tag "duration", options_for_select(my_options_for_select_duration), class: "form-control border-radius" %>
            </div>
            <button type="submit" class="btn btn-danger">Book</button>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>



