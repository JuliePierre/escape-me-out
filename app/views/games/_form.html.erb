<%= simple_form_for(@game) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, placeholder: "Escape Room" %>
  <%= f.input :description, as: :text, placeholder: "Describe your game here : story, difficulty, etc"%>
  <%= f.input :address, placeholder: "1 avenue des Champs Elysées, Paris" %>
  <%= f.input :phone_number, placeholder: "01 47 00 00 00" %>
  <%= f.input :min_players, placeholder: "1 minimum" %>
  <%= f.input :max_players, placeholder: "20 maximum" %>
  <%= f.input :price_per_hour, placeholder: "30€" %>
  <%= f.input :photo, as: :attachinary %>

  <%= f.button :submit, class: 'btn btn-danger' %>
<% end %>

<%= content_for(:after_js) do %>
  <%= javascript_include_tag "https://maps.google.com/maps/api/js?libraries=places&key=#{ENV['GPLACES_API_BROWSER_KEY']}" %>
<% end %>
