<h1>Edit <%= @game.name %></h1>

<%= simple_form_for(@game) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :min_players %>
  <%= f.input :max_players %>
  <%= f.input :price_per_hour %>

  <%= f.button :submit %>
<% end %>

